{
  "manifest_version": 3,
  "name": "CustomExtension",
  "version": "1.0.0",
  "description": "想象中的 chrome://newtab",
  "icons": {
    "128": "public/icon.png"
  },
  "chrome_url_overrides": {
    "newtab": "dist/index.html" // 指定新标签页面加载的 HTML 文件
  },
  "action": {
    "default_icon": "public/icon.png" // 地址栏右侧的扩展图标
  },
  "background": {
    "service_worker": "background.js" // 可选的后台脚本
  },
  // "content_scripts": [
  //   {
  //     "matches": ["<all_urls>"],
  //     "js": ["content.js"]
  //   }
  // ],
  "permissions": ["storage", "bookmarks", "favicon"], // 所需的权限,例如存储权限
  "web_accessible_resources": [
    {
      "resources": [
        "_favicon/*",
        "assets/**/*.js",
        "assets/**/*.css",
        "icons/icon.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
